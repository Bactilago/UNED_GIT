#include "Dates.h"
#include "Employee.h"
Dates::Dates() {
	// TODO Auto-generated constructor stub

}

tm* Dates::getCurrTime(){
	time_t hoy = time(0);
	ltm = localtime(&hoy);
	return ltm;
}

void Dates::myDate(){
	Dates::currYear = 1900 + ltm->tm_year;
}
