void Dates::myDate(){
	hoy = time(0);
	ltm = localtime(&hoy);
	currYear = 1900 + ltm->tm_year;
	currMonth = 1 + ltm->tm_mon;
	currDay = ltm->tm_mday;
	cout << currDay << "/" << currMonth << "/" << currYear<< endl;
}

