#include <iostream>
#include "Fechas.h"
#include "Empleado.h"
using namespace std;

int main() {

	Fechas hoy;
	hoy.setNow();
	hoy.setTime();
	hoy.getCurrYear();
	hoy.setCurrMonth();
	hoy.setFuture();

	Empleado print;
	print.header();

	hoy.getUserDate();


	return 0;
}
