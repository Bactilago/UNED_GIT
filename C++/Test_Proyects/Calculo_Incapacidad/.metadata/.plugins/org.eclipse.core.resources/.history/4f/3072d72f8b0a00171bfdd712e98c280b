#include <iostream>
#include "Fechas.h"
#include "Empleado.h"
using namespace std;

int main() {

	Fechas hoy;
	hoy.setNow();
	hoy.setTime();
	hoy.getCurrYear();
	hoy.setCurrMonth();
	hoy.setCurrDay();
	hoy.setFuture();

	Empleado print;
	print.header();
	print.getName();
	cout << endl;
	cout << "Inicio de la Incapacidad" << endl;

	Fechas fInicial;
	fInicial.validateDate();
	Fechas fFinal;
	fFinal.validateDate();

	return 0;
}
